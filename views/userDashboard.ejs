<%- include userHeader.ejs %>

<div class="page-wrapper">
    <% if(!joinedGame){ %>
        
        <div class="container-xl">
            <!-- Page title -->
            <div class="page-header d-print-none">
                <div class="row align-items-center">
                    <div class="col">
                        <h2 class="page-title">
                            Join Game
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-body">
            <div class="container-xl">
                <!-- Content here -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Enter ID of Game to join</h3>
                    </div>
                    <div class="card-body">
                        <form action="/users/joinGame" method="POST">
                            <div class="form-group mb-3 ">
                                <label class="form-label">Game Id</label>
                                <div>
                                    <input type="text" id="name" name="name" class="form-control"
                                        aria-describedby="emailHelp" placeholder="Enter id of the game">
                                    <small class="form-hint">Lorem ipsum dolor sit amet consectetur adipisicing
                                        elit.</small>
                                </div>
                            </div>
                            

                            <div class="form-footer">
                                <button type="submit" class="btn btn-primary">JoinGame</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


    <!--section for join teams -->
    <% }else { %>

        <div class="timer">
            <span id="timerWatch" ></span>
            <span id="team_time" style="display: none;"><%= game_time %></span>
        </div>

        <% if(joinedTeam){ %>

            <div class="container-xl">
                <!-- Page title -->
                <div class="page-header d-print-none">
                    <div class="row align-items-center">
                        <div class="col">
                            <h2 class="page-title">
                                 Team Details
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
    
            <div class="page-body">
                <div class="container-xl">
                    <!-- Content here -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Team name here</h3>
                        </div>
                        <div class="card-body">
                           Table containig the teammates info
                        </div>
                        <div class="form-footer start_game">
                            <button type="submit" id="start_gameButton" class="btn btn-primary">Start Game</button>
                        </div>
                    </div>
                   
                </div>
                
            </div>
        
        <% }else { %>
        <div class="container-xl">
            <!-- Page title -->
            <div class="page-header d-print-none">
                <div class="row align-items-center">
                    <div class="col">
                        <h2 class="page-title">
                            Join or Create Team
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="page-body">
            <div class="container-xl">
                <!-- Content here -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Enter Team to join </h3>
                    </div>
                    <div class="card-body">
                        <form action="/users/create" method="POST">
                            <div class="form-group mb-3 ">
                                <label class="form-label">Team Name</label>
                                <div>
                                    <input type="text" id="name" name="name" class="form-control"
                                        aria-describedby="emailHelp" placeholder="Enter name of the team">
                                    <small class="form-hint">Lorem ipsum dolor sit amet consectetur adipisicing
                                        elit.</small>
                                </div>
                            </div>

                            <div class="form-footer">
                                <button type="submit" class="btn btn-primary">Join Team</button>
                            </div>
                        </form>
    
                    </div>
                </div>
            </div>
            <br />
            <div class="container-xl">
                <!-- Content here -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Create Team</h3>
                    </div>
                    <div class="card-body">
                        <form action="/users/create" method="POST">
                            <div class="form-group mb-3 ">
                                <label class="form-label">Team Name</label>
                                <div>
                                    <input type="text" id="name" name="name" class="form-control"
                                        aria-describedby="emailHelp" placeholder="Enter name of the team">
                                    <small class="form-hint">Lorem ipsum dolor sit amet consectetur adipisicing
                                        elit.</small>
                                </div>
                            </div>

                            <div class="form-footer">
                                <button type="submit" class="btn btn-primary">Create Team</button>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    <% } %>

    <footer class="footer footer-transparent d-print-none">
        <div class="container">
            <div class="row text-center align-items-center flex-row-reverse">
                <div class="col-lg-auto ms-lg-auto">

                </div>
                <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                    <ul class="list-inline list-inline-dots mb-0">
                        <li class="list-inline-item">
                            Copyright &copy; 2021
                            <a href="." class="link-secondary">Cola</a>.
                            All rights reserved.
                        </li>
                        <li class="list-inline-item">
                            <a href="./changelog.html" class="link-secondary" rel="noopener">v1.0.0-beta2</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</div>

<!-- Libs JS -->
<!-- Tabler Core -->
<script src="/public/js/tabler.min.js"></script>

</body>

</html>