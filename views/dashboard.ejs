      <div class="page-wrapper">
        <div class="container-xl">
          <!-- Page title -->
          <div class="page-header d-print-none">
            <div class="row align-items-center">
              <div class="col">
                <h2 class="page-title">
                  Create Game
                </h2>
              </div>
            </div>
          </div>
        </div>
        <div class="page-body">
          <div class="container-xl">
            <!-- Content here -->
            <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Enter Details</h3>
                </div>
                <div class="card-body">
                  <form action="/users/create" method="POST">
                    <div class="form-group mb-3 ">
                      <label class="form-label">Name</label>
                      <div >
                        <input type="text" id="name" name="name" class="form-control" aria-describedby="emailHelp" placeholder="Enter name of the game">
                        <small class="form-hint">Lorem ipsum dolor sit amet consectetur adipisicing elit.</small>
                      </div>
                    </div>
                    <div class="form-group mb-3 ">
                      <label class="form-label">No. Of Players</label>
                      <div >
                        <input type="number" id="noOfPlayers" name="noOfPlayers" class="form-control" placeholder="Maximum Paritcipants">
                        <small class="form-hint">
                          Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                        </small>
                      </div>
                    </div>
                    <div class="form-group mb-3 ">
                        <label class="form-label">No. Of Rounds</label>
                        <div >
                          <input type="number" id="rounds" name='rounds' class="form-control" placeholder="Maximum ParitRounds">
                          <small class="form-hint">
                            Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                          </small>
                        </div>
                      </div>
                      <div class="form-group mb-3 ">
                        <label class="form-label">Starting date and time</label>
                        <div >
                          <input type="datetime-local" id="time" name="time" class="form-control" placeholder="Maximum ParitRounds">
                          <small class="form-hint">
                            Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                          </small>
                        </div>
                      </div>
                    
                    <div class="form-footer">
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </form>
                </div>
              </div>
          </div>
        </div>
        <footer class="footer footer-transparent d-print-none">
          <div class="container">
            <div class="row text-center align-items-center flex-row-reverse">
              <div class="col-lg-auto ms-lg-auto">
                
              </div>
              <div class="col-12 col-lg-auto mt-3 mt-lg-0">
